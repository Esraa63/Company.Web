
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}
@* <div class="mt-5 alert alert-dark">
    <h3> @TempData["TempTextMessage"] </h3>
</div> *@
<a asp-controller="Department" asp-action="Create" class="btn btn-primary">Craete New Department</a>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.CreateAt)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.CreateAt</td>
                    <partial model="@department.Id" name="_ActionButtonsPartialView" />
                </tr>

            }
        </tbody>

    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>
            There is No Departments .....
        </h3>
    </div>
}