@model RoleViewModel
@{
    ViewData["Title"] = "Update";
}

<h1>Update Role</h1>
<br />
<br />
<div class="row">
    <div class="col-6">
        <form asp-action="Update" asp-route-id="@Model.Id">
            <input hidden asp-for="Id" />
            <partial name="PartialViews/createEditPartial" model="@Model" />
            <div class="my-3">
                <a class="btn btn-info" asp-action="AddOrRemoveUsers" asp-controller="Role" asp-route-roleId="@Model.Id">Add Or Remove Users</a>
            </div>
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back To List</a>
        </form>
    </div>
</div>
