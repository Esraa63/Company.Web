@model IEnumerable<EmployeeDto>

<h1>All Employee</h1>
<br />
<br />
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Craete New Employee</a>

<div class="row justify-content-center align-items-center  my-5">
    <form class="row col-8 offset-2" asp-action="Index">
        <div class="col-8">
            <input type="text" class="form-control" name="searchIndex" placeholder="Search By Name" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>

@if (Model.Count() > 0)
{
    <table class="mt-5 table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Image)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.Address)</th>
                <th>@Html.DisplayNameFor(D => D.Salary)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(D => D.HiringDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
              {  <tr>
                    <td>@employee.Name</td>
                    <td> <img src="~/Files/Images/@employee.ImageUrl" width="40" height="40" alt="" /> </td>
                    <td>@employee.Age</td>
                    <td>@employee.Address</td>
                    <td>@Html.DisplayFor(M => employee.Salary)</td>
                    <td>@Html.DisplayFor(M => employee.Email)</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@employee.HiringDate</td>
                    <partial model="@employee.Id" name="_ActionButtonsPartialView" />
                </tr>}
        </tbody>

    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>
            There is No Employees .....
        </h3>
    </div>
}