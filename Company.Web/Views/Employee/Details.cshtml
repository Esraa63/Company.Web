@model EmployeeDto
@{
    ViewData["Tilte"] = "Details";
}

<h1>Employee Details</h1>
<br />
<br />
<form asp-action="Edit" asp-route-id="@Model.Id">
    <div class="form-group ">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input type="text" asp-for="Age" class="form-control" readonly />
    </div>
    <div class="form-group">
        <img src="~/Files/Images/@Model.ImageUrl" width="40" height="40" alt="" />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input type="text" asp-for="Salary" class="form-control" readonly />
    </div>
    <div class="form-group mb-3">
        <label class="col-form-label" asp-for="CreateAt"></label>
        <input type="text" asp-for="CreateAt" class="form-control" readonly />
    </div>
    <input type="submit" value="Edit" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>