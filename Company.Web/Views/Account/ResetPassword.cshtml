@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1 style="color : rgb(120, 117, 181);">ResetPassword</h1>
<form action="ResetPassword" method="post" class="login">
	<input type="hidden" asp-for="Email" />
	<input type="hidden" asp-for="Token" />
	<div class="signUp__field">
		<i class="login__icon fas fa-lock"></i>
		<input type="password" class="login__input" asp-for="Password" placeholder="Password">
	</div>
	<span asp-validation-for="Password"></span>

	<div class="signUp__field">
		<i class="login__icon fas fa-lock"></i>
		<input type="password" class="login__input" asp-for="ConfirmPassword" placeholder="ConfirmPassword">
	</div>
	<span asp-validation-for="ConfirmPassword"></span>
	<input type="submit" class="button login__submit" value="Change Password" />
</form>
