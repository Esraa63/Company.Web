@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1 style="color : rgb(120, 117, 181);">SignUp</h1>
<form asp-action="SignUp" method="post" class="signUp">
	<div class="signUp__field">
		<i class="login__icon fas fa-user"></i>
		<input type="text" class="login__input" asp-for="FirstName" placeholder="FirstName" />
	</div>
	<span asp-validation-for="FirstName"></span>

	<div class="signUp__field">
		<i class="login__icon fas fa-user"></i>
		<input type="text" class="login__input" asp-for="LastName" placeholder="LastName" />
		</div>
	<span asp-validation-for="LastName"></span>

	<div class="signUp__field">
		<i class="login__icon fas fa-envelope"></i>
		<input type="Email" class="login__input" asp-for="Email" placeholder="Email" />
	</div>
	<span asp-validation-for="Email"></span>

	<div class="signUp__field">
		<i class="login__icon fas fa-lock"></i>
		<input type="password" class="login__input" asp-for="Password" placeholder="Password">
	</div>
	<span asp-validation-for="Password"></span>

	<div class="signUp__field">
		<i class="login__icon fas fa-lock"></i>
		<input type="password" class="login__input" asp-for="ConfirmPassword" placeholder="ConfirmPassword">
	</div>
	<span asp-validation-for="ConfirmPassword"></span>

	<div class="wthree-text">
		<label class="anim">
			<input type="checkbox" required="" />
			<span>I Agree to the terms and cinditions</span>
		</label>
		<div class="clear"></div>
	</div>
	<button type="submit" value="SignUp" class="button login__submit">
		<span class="button__text">Sign Up</span>
		<i class="button__icon fas fa-chevron-right"></i>
	</button>
	<p style="color : white;">Do you have an Account? <a asp-action="SignIn">Login Now</a> </p>
</form>
